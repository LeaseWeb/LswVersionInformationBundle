{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <img width="20" height="28" alt="svn" src="data:image/png;base64," />
        <!-- <img width="20" height="28" alt="Git" src="data:image/png;base64," /> -->
        <span class="sf-toolbar-info-piece-additional">{{ collector.revision }}</span>
        <span class="sf-toolbar-status sf-toolbar-status-{{ collector.dirtyCount > 0 ? (collector.dirtyCount > 5 ? 'red': 'yellow') : 'green' }}">{{ collector.dirtyCount }}</span>
    {% endset %}
    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>Last revision</b>
            <span>{{ collector.revision }}</span>
        </div>
        <div class="sf-toolbar-info-piece">
            <b>Last author</b>
            <span>{{ collector.author }}</span>
        </div>
        <div class="sf-toolbar-info-piece">
            <b>Last modified</b>
            <span>{{ collector.date|date('Y-m-d @ H:i') }}</span>
        </div>
        <div class="sf-toolbar-info-piece">
            <b>Dirty files</b>
            <span class="sf-toolbar-status sf-toolbar-status-{{ collector.dirtyCount > 0 ? (collector.dirtyCount > 5 ? 'red': 'yellow') : 'green' }}">{{ collector.dirtyCount }}</span>
        </div>
    {% endset %}
    {% include 'WebProfilerBundle:Profiler:toolbar_item.html.twig' with { 'link': profiler_url } %}
{% endblock %}

{% block menu %}
<span class="label">
    <span class="icon">
      <span style="display:block; float: left; text-transform: none; background-color: #3F3F3F; color: #F7F7F7; font-family: sans-serif; font-size: 15px; padding: 4px 4px 3px 4px; margin: 3px 15px;">svn</span>
    </span>
    <strong>VERSION</strong>
</span>
{% endblock %}

{% block panel %}
    <h2>Version Information</h2>

    <h3>SVN info</h3>
    <pre>{{ collector.informationText }}</pre>

    <br/>
    <h3>SVN status</h3>
    <pre>{{ collector.statusText }}</pre>
    {% if not collector.statusText|trim %}<p><em>No dirty files found</em></p>{% endif %}

{% endblock %}